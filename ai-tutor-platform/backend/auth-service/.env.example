# ─── Server ──────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=8001
GLOBAL_PREFIX=api

# ─── Database ────────────────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_tutor_auth
DB_USER=postgres
DB_PASSWORD=postgres
DB_SYNCHRONIZE=false
DB_LOGGING=true

# ─── Redis ───────────────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL_SECONDS=900

# ─── JWT ─────────────────────────────────────────────────────────────────────
JWT_SECRET=change-me-to-a-random-64-char-minimum-secret-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=ai-tutor-platform
JWT_AUDIENCE=ai-tutor-clients

# ─── Security ────────────────────────────────────────────────────────────────
BCRYPT_ROUNDS=12
THROTTLE_TTL_SECONDS=60
THROTTLE_LIMIT=20

# ─── Service-to-service ──────────────────────────────────────────────────────
INTERNAL_SERVICE_SECRET=change-me-to-a-random-32-char-minimum-secret

# ─── AWS SQS (queue stubs) ───────────────────────────────────────────────────
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
SQS_EMAIL_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/ai-tutor-email-notifications
