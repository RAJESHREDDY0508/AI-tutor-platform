{
  "name": "ai-tutor-platform",
  "version": "1.0.0",
  "private": true,
  "description": "AI Tutor Platform â€“ Mono-repo root",
  "workspaces": [
    "frontend",
    "backend/auth-service",
    "backend/session-service",
    "backend/curriculum-service",
    "backend/homework-service",
    "backend/analytics-service",
    "backend/payment-service",
    "ai-services/llm-wrapper",
    "ai-services/vector-db",
    "ai-services/prompt-engine",
    "ai-services/safety-guardrails",
    "common"
  ],
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:down": "docker-compose down",
    "dev:clean": "docker-compose down -v --remove-orphans",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "test": "yarn workspaces foreach -A run test",
    "test:ci": "yarn workspaces foreach -A run test:ci",
    "build": "yarn workspaces foreach -A run build",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "prepare": "husky install",
    "migrate": "bash scripts/migrations/run-migrations.sh",
    "seed": "bash scripts/seeders/run-seeders.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  }
}
